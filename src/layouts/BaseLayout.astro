---
import Sidebar from "../components/Sidebar.astro";
import "../components/global.css"
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{Astro.props.title || "Vili's vault"}</title>
    <link rel="stylesheet" href="/components/global.css" />
  </head>
  <body>
    <div class="container">
      <aside>
        <Sidebar>
      </aside>
      <main>
        <slot />
      </main>
    </div>
  </body>
</html>

<style is:global>
.container {
  display: flex;
  max-width: 45vw;
  margin: 0 auto;
  gap: 1rem;
  padding: 2rem;
}

aside {
  width: 4vw;
  height: 156px;
  border-right: 1px solid black;
}

main {
  flex: 3;
}

h1,h2,h3{
  margin-bottom: 0px;
}
</style>
