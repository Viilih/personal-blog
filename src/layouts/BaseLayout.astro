---
import Sidebar from "../components/Sidebar.astro";
import "../styles/global.css";
import { getLangFromUrl } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
---

<!doctype html>
<html lang={lang} class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{Astro.props.title || "Vili's vault"}</title>
    <link rel="icon" type="image/x-icon" href="/favicon.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-background text-foreground font-serif antialiased h-full">
    <div
      class="max-w-7xl mx-auto p-6 md:p-6 flex flex-col md:flex-row gap-4 md:gap-8"
    >
      <aside class="relative">
        <div class="sticky top-6 flex flex-col md:flex-row items-start gap-4">
          <Sidebar />
          <div
            class="w-full h-px md:w-px md:h-30 bg-border/50 dark:bg-border"
            role="separator"
            aria-orientation="vertical"
          >
          </div>
        </div>
      </aside>
      <main class="flex-1 min-w-0">
        <div class="max-w-full md:max-w-[85vw] prose dark:prose-invert">
          <slot />
        </div>
      </main>
    </div>
  </body>
</html>

<style is:global>
  body {
    font-family: "Cormorant Garamond", serif;
  }

  figure:has(> pre) {
    margin: 0;
  }

  pre {
    overflow-x: auto;
    padding: 1rem 0;
    margin: 0;
    border-radius: 0.5rem;
  }

  code {
    counter-reset: line;
    display: grid;
  }

  code:not(pre code) {
    display: inline;
    background-color: hsl(var(--muted));
    border: 2px solid hsl(var(--border));
    padding: 2px 4px;
    border-radius: 4px;
    font-family: monospace;
    font-size: 0.9em;
    white-space: nowrap;
  }

  code > [data-line] {
    padding-right: 1rem;
    padding-left: 1rem;
    border-left: 3px solid transparent;
  }

  code > [data-line]::before {
    counter-increment: line;
    content: counter(line);
    display: inline-block;
    width: 0.5rem;
    margin-right: 1rem;
    text-align: right;
    color: hsl(var(--muted-foreground));
  }

  code[data-line-numbers-max-digits="2"] > [data-line]::before {
    width: 2rem;
  }

  code[data-line-numbers-max-digits="3"] > [data-line]::before {
    width: 3rem;
  }

  code > [data-line][data-highlighted] {
    background-color: hsl(var(--accent));
    border-left: 3px solid hsl(var(--primary));
  }
</style>

<script is:inline>
  const theme = localStorage.getItem("theme") || "light";
  const isDark =
    theme === "dark" ||
    (theme === "system" &&
      window.matchMedia("(prefers-color-scheme: dark)").matches);

  document.documentElement.classList.toggle("dark", isDark);
</script>
