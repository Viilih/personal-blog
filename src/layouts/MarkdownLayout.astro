---
import GoBackButton from "../components/GoBackButton.astro";
import BaseLayout from "./BaseLayout.astro";
import TableOfContents from "../components/TableOfContents.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

interface Heading {
  depth: number;
  text: string;
  slug: string;
  subheadings: Heading[];
}
const { frontmatter, headings = [], minutesRead } = Astro.props;

// Get the current language from URL
const lang = getLangFromUrl(Astro.url);

// Use the current language for date formatting
const formatDate = (date: Date) => {
  // Use the appropriate locale based on the language
  const locale = lang === "pt-br" ? "pt-BR" : "en-US";

  return date.toLocaleDateString(locale, {
    month: "long",
    day: "numeric",
    year: "numeric",
  });
};

const publishDate = new Date(frontmatter.pubDate);
const formattedDate = formatDate(publishDate);

function buildToc(headings: Heading[]) {
  if (!headings || !Array.isArray(headings)) {
    return [];
  }

  const toc: Heading[] = [];
  const parentHeadings = new Map();

  headings.forEach((h: any) => {
    const heading = { ...h, subheadings: [] };
    parentHeadings.set(heading.depth, heading);

    if (heading.depth === 2) {
      toc.push(heading);
    } else {
      // Check if parent heading exists before adding
      const parentHeading = parentHeadings.get(heading.depth - 1);
      if (parentHeading) {
        parentHeading.subheadings.push(heading);
      } else {
        // Add to top level if no parent exists
        toc.push(heading);
      }
    }
  });

  return toc;
}

const toc = buildToc(headings);
---

<BaseLayout pageTitle={frontmatter.title}>
  <div class="layout">
    <article class="post">
      <GoBackButton />
      <header class="post__header">
        <h1 class="post__title">{frontmatter.title}</h1>
        <div class="post__meta">
          <span class="post__date">
            {formattedDate}
          </span>
          {minutesRead && <p>{minutesRead}</p>}
        </div>
      </header>
      <div class="post__content-wrapper">
        <div class="post__content">
          <slot />
        </div>
      </div>
    </article>
    <aside class="toc-sidebar">
      <TableOfContents toc={toc} />
    </aside>
  </div>
</BaseLayout>

<style>
  .layout {
    display: flex;
    gap: 3rem;
    max-width: 100%;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .post {
    width: 100%;
    max-width: 65vw;
    position: relative;
    text-align: justify;
    height: 100%;
    overflow: hidden;
  }

  .post__title {
    color: #333;
    line-height: 1;
    font-size: 3rem;
  }
  .post__date {
    line-height: 1rem;
    color: rgb(85, 95, 108);
  }
  .post__author {
  }

  .toc-sidebar {
    position: relative;
    width: 280px;
    margin-left: auto;
  }

  .toc-content {
    position: sticky;
    top: 2rem;
    display: flex;
    align-items: flex-start;
    gap: 1rem;
  }

  .toc-divider {
    width: 1px;
    height: 120px;
    background-color: rgba(0, 0, 0, 0.5);
    transition: all 0.3s ease;
  }
  .rounded-diagram img {
    border-radius: 8px; /* Or use rem, em, % */
    display: block; /* Ensures proper block layout if needed */
  }
  @media (max-width: 1024px) {
    .layout {
      max-width: 90%;
    }
  }

  @media (max-width: 768px) {
    .layout {
      flex-direction: column;
    }

    .toc-sidebar {
      width: 100%;
    }

    .post {
      max-width: 100%;
    }
  }

  @media (max-width: 480px) {
    .post {
      max-width: 100%;
    }
    .toc-sidebar {
      display: none;
    }
    .post__title {
      font-size: 2rem;
      line-height: 1.2;
      text-align: start;
    }
  }
</style>
