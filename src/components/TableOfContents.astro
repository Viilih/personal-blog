---
interface Props {
  toc: {
    depth: number;
    text: string;
    slug: string;
    subheadings: any[];
  }[];
}

const { toc } = Astro.props;
---

<nav class="toc">
  <div class="toc-header">
    <span class="toc-title">CONTENTS</span>
    <span class="toc-count">({toc.length})</span>
  </div>
  <ul class="toc-list">
    {
      toc.map((heading) => (
        <li>
          <a href={`#${heading.slug}`} class="toc-link">
            {heading.text}
          </a>
          {heading.subheadings.length > 0 && (
            <ul class="toc-sublist">
              {heading.subheadings.map((subheading) => (
                <li>
                  <a href={`#${subheading.slug}`} class="toc-sublink">
                    {subheading.text}
                  </a>
                </li>
              ))}
            </ul>
          )}
        </li>
      ))
    }
  </ul>
</nav>

<style>
  .toc {
    position: sticky;
    top: 2rem;
    background-color: rgb(247, 247, 247);
    border-radius: 4px;
    padding: 1rem;
    width: 200px;
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas,
      "Liberation Mono", "Courier New", monospace;
  }

  .toc-header {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    margin-bottom: 1.5rem;
    font-size: 0.875rem;
  }

  .toc-title {
    font-weight: 500;
    color: #333;
  }

  .toc-count {
    color: #666;
  }

  .toc-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .toc-link {
    display: block;
    color: #333;
    text-decoration: none;
    font-size: 0.875rem;
    line-height: 1.4;
    transition: color 0.2s;
  }

  .toc-link:hover {
    color: #000;
  }

  .toc-sublist {
    list-style: none;
    padding-left: 1rem;
    margin-top: 0.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .toc-sublink {
    display: block;
    color: #666;
    text-decoration: none;
    font-size: 0.875rem;
    line-height: 1.4;
    transition: color 0.2s;
  }

  .toc-sublink:hover {
    color: #333;
  }

  @media (max-width: 768px) {
    .toc {
      position: relative;
      top: 0;
      width: 100%;
      margin-top: 2rem;
    }
  }
</style>
