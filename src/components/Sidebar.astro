---
import LanguagePicker from "../components/LanguagePicker.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import ThemeSlider from "./ThemeSlider.astro";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="sidebar-container">
  <div class="language-switcher">
    <LanguagePicker />
    <ThemeSlider id="theme-toggle" />
  </div>

  <ul class="sidebar">
    <li><a href={`/${lang}`}>{t("sidebar.articles")}</a></li>
    <li><a href={`/${lang}/now`}>{t("sidebar.now")}</a></li>
    <li><a href={`/${lang}/learning`}>{t("sidebar.learning")}</a></li>
    <li><a href={`/${lang}/notes`}>{t("sidebar.notes")}</a></li>
  </ul>
</div>

<style>
  .sidebar-container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .language-switcher {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    align-items: center;
    margin-bottom: 0.5rem;
  }

  .sidebar {
    list-style: none;
    padding: 0;
    margin: 0;
    max-height: calc(100vh - 5rem);
    overflow-y: auto;
  }

  .sidebar li {
    margin-bottom: 1rem;
    display: flex;
    justify-content: end;
  }

  .sidebar a {
    text-decoration: none;
    color: var(--color);
  }

  .sidebar a:hover {
    color: var(--link-color);
  }

  @media (max-width: 768px) {
    .sidebar li {
      justify-content: start;
      margin-left: 0.6rem;
    }
  }
</style>
